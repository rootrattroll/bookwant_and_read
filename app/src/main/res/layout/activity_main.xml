<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<!--    ここのリストロールってのに読みたい本か読む本かを切り替えて入れていく的な感じでいいのかな？それともそれぞれ別のUI用意する？-->
    <!-- 検索ボックス -->
    <LinearLayout
        android:id="@+id/kensakubox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/kensakuword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:imeOptions="actionSearch"
            android:singleLine="true"/>

        <Button
            android:id="@+id/kensaku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="検索"/>
    </LinearLayout>

    <!-- 一覧（ListView単体。必ずidを付ける） -->
    <ListView
        android:id="@+id/listBooks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/kensakubox"
        app:layout_constraintBottom_toTopOf="@id/bookkirikae"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 下部の切替＆追加 -->
    <LinearLayout
        android:id="@+id/bookkirikae"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnWant"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="読みたい本"/>

        <Button
            android:id="@+id/btnRead"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="読んだ本"/>

        <Button
            android:id="@+id/addbook"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="本追加"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>